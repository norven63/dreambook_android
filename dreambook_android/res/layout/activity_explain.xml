<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/explain_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/navigatorImage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center" >

        <ImageView
            android:layout_width="@dimen/explain_navigatorImage_size"
            android:layout_height="@dimen/explain_navigatorImage_size"
            android:layout_marginRight="2dp"
            android:background="@drawable/explain_navigat_point" />

        <ImageView
            android:layout_width="@dimen/explain_navigatorImage_size"
            android:layout_height="@dimen/explain_navigatorImage_size"
            android:layout_marginRight="2dp"
            android:background="@drawable/explain_navigat_point" />

        <ImageView
            android:layout_width="@dimen/explain_navigatorImage_size"
            android:layout_height="@dimen/explain_navigatorImage_size"
            android:layout_marginRight="2dp"
            android:background="@drawable/explain_navigat_point" />

        <ImageView
            android:layout_width="@dimen/explain_navigatorImage_size"
            android:layout_height="@dimen/explain_navigatorImage_size"
            android:layout_marginRight="2dp"
            android:background="@drawable/explain_navigat_point" />
    </LinearLayout>

</RelativeLayout>