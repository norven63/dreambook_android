<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <AutoCompleteTextView
        android:id="@+id/search_editText"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_search_edittext"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/cancel_button_ImageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/search_editText"
        android:background="@drawable/selector_cancel_button" />

    <ImageView
        android:id="@+id/search_left_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/search_editText"
        android:background="@drawable/ic_search_head" />

</RelativeLayout>